<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="cosmic.com.mvvmprj.viewmodel.BookViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eceef1"
        tools:context=".view.BookActivity">

        <TextView
            android:id="@+id/topArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center_horizontal"
            android:text="예약 화면"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_conRoom"
            android:padding="5dp"
            android:background="@color/very_light_pink_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="181dp"
            android:layout_marginEnd="170dp"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_book_officeName" />

        <TextView
            android:id="@+id/tv_book_officeName"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="48dp"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topArea"
            tools:text="회의실" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_radio_on"></ImageView>

        <Button
            android:id="@+id/book_btn"
            android:layout_width="203dp"
            android:layout_height="56dp"
            android:layout_marginStart="104dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="32dp"
            android:background="@color/colorPrimary"
            android:text="예약"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_book_officeName">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/t1"
                    android:background="@drawable/book_selector"
                    style="@style/TextStyle7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00" />

                <Button
                    android:id="@+id/t2"
                    android:background="@drawable/book_selector"
                    style="@style/TextStyle7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:30" />

                <Button
                    android:id="@+id/t3"
                    android:background="@drawable/book_selector"
                    style="@style/TextStyle7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00" />

                <Button
                    android:id="@+id/t4"
                    android:background="@drawable/book_selector"
                    style="@style/TextStyle7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30" />

                <Button
                    android:id="@+id/t5"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00" />

                <Button
                    android:id="@+id/t6"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:30" />

                <Button
                    android:id="@+id/t7"
                    android:background="@drawable/book_selector"
                    style="@style/TextStyle7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00" />

                <Button
                    android:id="@+id/t8"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30" />


                <Button
                    android:id="@+id/t9"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:00" />

                <Button
                    android:id="@+id/t10"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:30" />

                <Button
                    android:id="@+id/t11"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:00" />

                <Button
                    android:id="@+id/t12"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30" />

                <Button
                    android:id="@+id/t13"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:00" />

                <Button
                    android:id="@+id/t14"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:30" />

                <Button
                    android:id="@+id/t15"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:00" />

                <Button
                    android:id="@+id/t16"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:30" />

                <Button
                    android:id="@+id/t17"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:00" />

                <Button
                    android:id="@+id/t18"
                    style="@style/TextStyle7"
                    android:background="@drawable/book_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:30" />


            </LinearLayout>
        </HorizontalScrollView>


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="298dp"
            android:layout_marginBottom="24dp"
            android:text="예약가능 시간"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <TextView
            android:id="@+id/tv_book_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="91dp"
            app:layout_constraintBottom_toTopOf="@+id/book_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>